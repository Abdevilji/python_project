<Mainscreen>:

	name: "Profile"
        
    BoxLayout:
        orientation: "vertical"
        size: root.width,root.height

        spacing:20

        Button:
            text: "Faculty"
            size_hint: .4,.5
            on_release:
                app.root.current="second"
                root.manager.transition.direction = "left"
        Button:
            text: "Sports"
            size_hint: .4,.5
            on_release:
                app.root.current="gamesecond"
                root.manager.transition.direction = "left"	
        Button:
            text: "Mess"
            size_hint: .4,.5
            on_release:
                app.root.current="messsecond"
                root.manager.transition.direction = "left"
        Button:
            text: 'Sign Out'
            size_hint: .1,.05
            # pos_hint:{'center_x': 0.48, 'center_y': 0.45}
            pos_hint:{'center_x' : .6, 'center_y ' : .5}
            on_release: app.root.current = 'sign'
        Button:
            text: "clubs"
            size_hint: .4,.5

